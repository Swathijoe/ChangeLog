@model IEnumerable<MVCApp.Models.ChangeLogViewMdoel>
@{
    ViewData["Title"] = "Change Log";
}

<div class="table-responsive">
    <table class="table table-bordered table-condensed table-striped table-hover sortable">
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="10">No Record's found.</td>
            </tr>

        }
        else
        {
            <thead>
                <tr>
                    <th data-defaultsign="_19">Change Type</th>
                    <th data-defaultsign="AZ">Release Notes</th>
                    <th data-defaultsign="AZ">Release Date and Time</th>                                       
                </tr>
            </thead>

            foreach (var item in Model)
            {
                <tr class="row-color">
                    <td>@item.ChangeLogType</td>
                    <td>@item.Content</td>
                    <td>@item.ChangeLogTime</td>                                    
                </tr>

            }
        }
    </table>
</div>
